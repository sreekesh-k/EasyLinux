<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color of the dialog -->
    <solid android:color="#0E1226" /> <!-- Dark blue background -->

    <!-- Rounded corners -->
    <corners android:radius="16dp" /> <!-- 16dp radius for rounded edges -->

    <!-- Border with @color/secondary -->
    <stroke
        android:width="4dp"
        android:color="@color/secondary" /> <!-- Border color from the theme -->

    <!-- Optional padding inside the dialog (adjust if needed) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
